@page
@model IndexModel
@{
    ViewData["Title"] = "Zmiana numeru telefonu";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<h1 class="text-center h1s">Możesz tutaj zmienić swój numer telefonu</h1><br><br>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form class="col-lg-6 offset-lg-3 " id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="row justify-content-center">

        <div class="form-group">
            <label asp-for="Username" class="text-center labels"></label>
            <div class="input-group mb-3">
                <div class="soft-codeon">
                    <i class="fa fa-envelope-o fa-fw icon"></i>
                    <input asp-for="Username" class=" form-control soft-field" disabled />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Input.PhoneNumber" class="text-center labels"></label>
                <div class="soft-codeon">
                    <i class="fa fa-user icon"></i>
                    <input asp-for="Input.PhoneNumber" class="form-control soft-field" />
                </div>
        </div>

    </div>

    <div class="row justify-content-center form-group text-center">
            <button id="update-profile-button" type="submit" class="btn btn-primary">Zapisz zmiany</button>
    </div>

</form>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}