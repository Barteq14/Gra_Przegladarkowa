@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Zmiana hasełka";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<h1 class="text-center h1s">Możesz tutaj zmienić swoje hasło</h1>
<br>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form class="col-lg-6 offset-lg-3 " id="change-password-form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row justify-content-center">

        <div class="form-group">
            <label class="text-center labels">Stare hasło:</label>
            <div class="input-group mb-3">
                <div class="soft-codeon">
                    <i class="fa fa-unlock icon"></i>
                    <input asp-for="Input.OldPassword" class="form-control soft-field" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="text-center labels">Nowe hasło:</label>
            <div class="input-group mb-3">
                <div class="soft-codeon">
                    <i class="fa fa-key icon"></i>
                    <input asp-for="Input.NewPassword" class="form-control soft-field" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="text-center labels">Potwierdź nowe hasło:</label>
            <div class="input-group mb-3">
                <div class="soft-codeon">
                    <i class="fa fa-key icon"></i>
                    <input asp-for="Input.ConfirmPassword" class="form-control soft-field" />
                </div>
            </div>
        </div>

    </div>

    <div class="row justify-content-center form-group text-center">
        <button type="submit" class="btn btn-primary">Zapisz hasło</button>
    </div>

</form>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}